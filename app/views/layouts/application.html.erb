<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar-inverse">
<div class="container">
 <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
  
  <div class="nav navbar-nav navbar-right">
   
<% if user_signed_in? %>
  

  <span class="icon"><%= link_to "Home", user_path(current_user.id), class: " glyphicon glyphicon-home home"%></span>
  <span class="icon"><%= link_to "Users", users_path, class: " glyphicon glyphicon-user users"%></span>
  <span class="icon"><%= link_to "Books", books_path, class: " glyphicon glyphicon-user users"%></span>
  <span class="icon"><%= link_to "Logout", destroy_user_session_path, method: :delete, class: " glyphicon glyphicon-log-out logout"%></span>


  <% else %>
  
  <span class="icon"><%= link_to "Home", root_path, class: " glyphicon glyphicon-home home"%></span>
  <span class="icon"><%= link_to "About", home_about_path, class: " glyphicon glyphicon-link about"%></span>
  <span class="icon"><%= link_to "sign up", new_user_registration_path, class: " glyphicon glyphicon-edit sign_up" %></span>
  <span class="icon"><%= link_to " login", new_user_session_path, class: " glyphicon glyphicon-log-in sign_in"%></span>
<% end %>
</div>
</div>
</header>
    <%= yield %>
  </body>
</html>
