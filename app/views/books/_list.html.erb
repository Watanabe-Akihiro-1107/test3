





<div class="container"> <!-- ここを追加 -->
    <div class="row">     <!-- ここを追加 -->
  <div class="col-xs-3" style="background-color: white;"> 
    <h2>User info</h2>
     <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100" %>


    <table class="table">
      <tbody><tr></tr> 
      <tr>
    	  <th>name</th>
    	  <th><%= current_user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= current_user.introduction %></th>
      </tr>
      </tbody>
    </table>

   
    <%= link_to "", edit_user_path(current_user.id), class: "  col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
  
   



    

        
        <h1>New book</h1>

    <%= form_for(book) do |f| %>

  
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  

  
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  


    <%= f.submit %>

    

<% end %>








      </div>